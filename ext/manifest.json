{
  "description": "send all tabs' url to server",
  "manifest_version": 2,
  "name": "save-urls",
  "version": "1.4",
  "permissions": [
    "tabs","storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
  "gecko": {
    "id": "save-urls@mcavdar.com",
    "strict_min_version": "126.0",
    "update_url": "https://raw.githubusercontent.com/mcavdar/save-url/refs/heads/main/updates.json"
   }
  },
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "options.html"
  }
}
